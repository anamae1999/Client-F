{%- if section.settings.show_product_recommendations -%}
  {% comment %}Allow for this section to work on cart page with cart data{% endcomment %}
  {% if product != blank %}
    {% assign productID = product.id %}
  {% else %}
    {% assign productID = cart.items[0].product_id %}
  {% endif %}
  {%- if recommendations.performed -%}
    {%- if recommendations.products_count > 0 -%}
      <section class="feeturesProductCarousel">
        <div class="wrapper">
          {%- if section.settings.heading != blank -%}
            <h3 class="product-recommendations__title">{{ section.settings.heading | escape }}</h3>
          {%- endif -%}
          <div id="{{productID}}-carousel" class="feeturesProductCarouselSlider" data-section-type="product-carousel">
            {% for recommendations_product in recommendations.products %}
              <div
                id="{{productID}}-carousel-item"
                data-product-id="{{recommendations_product.id}}"
                class="feeturesProductCarouselSlider__item"
              >
                {% render 'product-grid-item', product: recommendations_product %}
              </div>
            {% endfor %}
            <div id="{{productID}}-carousel-controls" class="feeturesProductCarouselSlider__controls"></div>
          </div>
        </div>
        <script>
          'use strict';
          if (true) {
            let scripts = document.querySelectorAll(
              '[id="shopify-section-product-recommendations"] * script[data-grid-item-script]'
            );
            Array.from(scripts).forEach((oldScript) => {
              let newScript = document.createElement('script');
              Array.from(oldScript.attributes).forEach((attr) => newScript.setAttribute(attr.name, attr.value));
              newScript.appendChild(document.createTextNode(oldScript.innerHTML));
              oldScript.parentNode.replaceChild(newScript, oldScript);
            });
          }
        </script>
      </section>
    {%- endif -%}
  {%- else -%}
    <div
      data-base-url="{{ routes.product_recommendations_url }}"
      data-product-id="{{ productID }}"
      data-section-id="{{ section.id }}"
      data-section-type="product-recommendations"
    ></div>
  {%- endif -%}
{%- endif -%}

