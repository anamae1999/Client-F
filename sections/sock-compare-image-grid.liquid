<div class="comparison-image-swarm-wrapper" data-comparison-image-swarm>
  <div class="comparison-image-swarm-text">
    <h1>We create socks designed to enhance the action of life</h1>
    <span> Movement is our business</span>
    <div class="comparison-image-swarm-images">
      {% for block in section.blocks %}
        <div class="image-{{ forloop.index }}">
          {% if block.settings.image %}
            <img
              width="600"
              height="600"
              src="{{ block.settings.image | image_url }}"
            >
          {% else %}
            {{ forloop.index }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script data-comparison-image-swarm></script>

{% schema %}
{
  "name": "Sock Image Grid Wall",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Header Goes Here"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body",
      "default": "Body Goes Here"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (index bassed ordering clockwise from center top)"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Sock Image Grid Wall"
    }
  ]
}
{% endschema %}
