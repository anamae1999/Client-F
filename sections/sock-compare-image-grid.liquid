<style>
  .comparison-image-swarm-wrapper[data-comparison-image-swarm] {
    /* vw percentages  based on provided image at 1920px width */
    width: 100vw;
    aspect-ratio: 1.4;
    position: relative;
    left: calc(50% - 50vw);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    .comparison-image-swarm-text {
      max-width: 49%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .comparison-image-swarm-text h1 {
      font-size: 2.5vw;
    }

    .comparison-image-swarm-text span {
      font-size: 1.25vw;
      max-width: 80%;
    }

    .comparison-image-swarm-images {
      width: 2px;
      height: 2px;
      position: absolute;
      left: calc(50% - 1px);
      top: calc(50% - 1px);
      overflow: visible;
    }

    .comparison-image-swarm-images * {
      display: flex;
      flex-direction: row;
      align-items: stretch;
      justify-content: stretch;
      background: lightgrey;
    }

    .comparison-image-swarm-images * img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    .image-1 {
