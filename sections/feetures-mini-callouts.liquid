{% if section.blocks.size > 0 %}
  {%- style -%}

    .section-id-{{section.id}}-padding  {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }

    #shopify-section-{{section.id}} .wrapper--image-text {
      background-color: {{ section.settings.background_color }};
    }

  {%- endstyle -%}
  
<section class="section-id-{{section.id}}-padding">
    <div class="wrapper">
        <div class="feeturesMiniCallouts">
            {% for block in section.blocks %}
                {% if block.type == "callout" %}
                    <div class="feeturesMiniCalloutsItem">
                        <div class="feeturesMiniCalloutsItem__img">
                            <img src="{{ block.settings.image | img_url: '88x88'  }}" alt="{{block.settings.headline}}">
                        </div>
                        <div>
                            <p class="feeturesMiniCalloutsItem__headline">{{ block.settings.headline }}</p>
                            <p class="feeturesMiniCalloutsItem__description">{{ block.settings.text }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{% schema %}
{
"name": "Feetures Mini Callouts",
"settings": [
   {
              "type": "range",
              "id": "padding_top",
              "min": 0,
              "max": 100,
              "step": 4,
              "unit": "px",
              "label": "Padding Top",
              "default": 36
            },
            {
              "type": "range",
              "id": "padding_bottom",
              "min": 0,
              "max": 100,
              "step": 4,
              "unit": "px",
              "label": "Padding Bottom",
              "default": 36
            }
],
"max_blocks": 3,
"blocks": [
    {
        "type": "callout",
        "name": "callout",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Statement Image (88x88 ideally)"
            },
            {
                "type": "text",
                "id": "headline",
                "label": "Statement Headline"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Statement Text"
            }
      
        ]
    }
],
"presets": [
    {
        "name": "Feetures Mini Callouts",
        "category": "Feetures"
    }
]
}
{% endschema %}

