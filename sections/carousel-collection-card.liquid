{
  "name": "Carousel Collection Card",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Title Text"
    },
    {
      "type": "number",
      "id": "slides_visible_desktop",
      "label": "Slides Visible Desktop",
      "default": 3
    },
    {
      "type": "number",
      "id": "slides_visible_mobile",
      "label": "Slides Visible Mobile",
      "default": 1
    },
    {
      "type": "number",
      "id": "slide_space_desktop",
      "label": "Slide Spacing Desktop",
      "default": 20
    },
    {
      "type": "number",
      "id": "slide_space_mobile",
      "label": "Slide Spacing Mobile",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carousel Collection Card"
    }
  ]
}
{% endschema %}
