{% style %}

.feeturesSockHeightCarousel {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.sock-height-carousel-section-wrapper {
  text-align: center;
}

.sock-height-icon-carousel {
  display: flex; 
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

  .sock-height-icon {
    width: 75px;
    height: 75px;
      border: 1px solid black;
    border-radius: 100%;
    margin: 5px;
  }

  .sock-height-icon:hover {
    cursor: pointer;
  }
.sock-height-icon img {
  padding: 10px;
  width: 100%;
    height: 100%;
}

.sock-item-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 10px;
}

  .sock-item-wrapper img {
    height: 100%;
    width: auto;
    max-height: 500px;
  }

.sock-item-button-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.sock-item-button-wrapper a:first-of-type {
  margin-right: 5px;
}

{% endstyle %}

<section class="feeturesSockHeightCarousel"> 
<div class="wrapper">
<div class="sock-height-carousel-section-wrapper">
  <h2>Explore Our Heights</h2>

  <div class="sock-height-icon-carousel">

    {% for block in section.blocks %}
      <div class="sock-height-icon" onClick="$('.feeturesSockHeightCarouselSlider').slick('slickGoTo', {{ forloop.index }})">
        {{ block.settings.sock_icon | image_url: width: '150' | image_tag }}
      </div>
    {% endfor %}

  </div>


  <div class="sock-carousel-wrapper feeturesSockHeightCarouselSlider" data-section-type="sock-height-carousel">

    {% for block in section.blocks %}

    <div class="sock-item-wrapper feeturesSockHeightCarouselSlider__item">
      {{ block.settings.image | image_url: width: '500' | image_tag }}
      <h4>{{ block.settings.sock_title}}</h4>
      <p>{{ block.settings.sock_description }}</p>
      <div class="sock-item-button-wrapper">
        <a href="{{ block.settings.cta_btn_url_1 }}" class="btn">{{ block.settings.cta_btn_text_1 }}</a>
        <a href="{{ block.settings.cta_btn_url_2 }}" class="btn">{{ block.settings.cta_btn_text_2 }}</a>
      </div>
    </div>

    {% endfor %}
    
    <div class="feeturesSockHeightCarouselSlider__controls"></div>

  </div>
</div>
</div>
</section>

{% schema %}
{
  "name": "Sock Height Carousel",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "sock_height",
      "name": "Sock Height",
      "settings": [
        {
          "type": "image_picker",
          "id": "sock_icon",
          "label": "Sock Icon"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Sock image"
        },
        {
          "type": "text",
          "id": "sock_title",
          "label": "Sock title"
        },
        {
          "type": "richtext",
          "id": "sock_description",
          "label": "Description",
          "default": "<p><strong>Best for:</strong> Running, walking, cycling, and daily wear</p>"
        },
        {
          "type": "text",
          "id": "cta_btn_text_1",
          "label": "CTA Button Text - 1"
        },
        {
          "type": "url",
          "id": "cta_btn_url_1",
          "label": "CTA Button URL - 1"
        },
        {
          "type": "text",
          "id": "cta_btn_text_2",
          "label": "CTA Button Text - 2"
        },
        {
          "type": "url",
          "id": "cta_btn_url_2",
          "label": "CTA Button URL - 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sock Height Carousel",
      "category": "Feetures",
      "blocks": [
        {
          "type": "sock_height"
        }
      ]
    }
  ]
}

{% endschema %}