
{% liquid
  assign image = section.settings.image
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign image_side = section.settings.image_side
%}

{% if heading and image %}


{% style %}

.featured-product-full-width-wrapper {
  background: #F5F2EE;
  padding: 50px 0;
  margin-bottom: 50px;
}

.featured-product-full-width-image-wrapper {
  position: relative;
  text-align: center;
}
.featured-product-full-width-image-wrapper img {
  width: 100%;
  height: auto;
  object-fit: cover;
}
 

.featured-product-full-width-text-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.featured-product-row-wrapper h3 {
  margin-bottom: 0px;
}

.featured-product-row {
  display: flex;
  justify-content: center;
  align-items: center;
}


@media (max-width: 767px) {
  .featured-product-full-width-wrapper {
    padding: 0;

    .featured-product-full-width-text-wrapper {
      width: 90%;
    }

    p {
      line-height: 18px;
    }

    img {
      width: 100%;
      object-fit: cover;
      min-height: 425px;
    }

    .wrapper {
      padding: 0px;
      line-height: 0px;
    }
  }

  
}

{% endstyle %}

<section class="featured-product-full-width-wrapper">
  <div class="wrapper">
    <div class="featured-product-full-width-image-wrapper">
      {% if section.settings.image != blank %}
        <picture>
          <source srcset="{{ section.settings.image | image_url: width: '2000' }}" media="(min-width: 768px)">
          <img src="{{ section.settings.image_mobile | image_url: width: '2000' }}" alt="" />
        </picture>
      {% else %}
      <img src="https://placehold.co/1200x400@2x.png" />
      {% endif %}

      <div class="featured-product-full-width-text-wrapper">
        {% if section.settings.heading %}<h3>{{ section.settings.heading }}</h3>{% endif %}
        {% if section.settings.subheading %}<p>{{ section.settings.subheading }}</p>{% endif %}
      </div>
    </div>
  </div>
</section>

{% endif %}

{% schema %}
{
  "name": "Feetures Full Image",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section Subheading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (Mobile)"
    }
  ],
  "presets": [
    {
      "name": "Feetures Full Image",
      "category": "Feetures"
    }
  ]
}
{% endschema %}