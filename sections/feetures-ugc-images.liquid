{%- style -%}
  .section-id-{{section.id}}-padding  {
      padding-top: {{section.settings.padding_top}}px;
      padding-bottom: {{section.settings.padding_bottom}}px;
  }

  .feeturesUGCImages__images {
  display: flex;
  flex-wrap: wrap;
  }

  .feeturesUGCImages__images img {
    width: 25%;
  }

  @media (max-width: 767px) {
    .feeturesUGCImages__images img {
      width: 50%;
    }
  }

  {% if section.settings.image4 == blank %}
    .feeturesUGCImages__images img {
    width: 33.3%;
  }

  @media (max-width: 767px) {
    .feeturesUGCImages__images img.ugc-1 {
      width: 100%;
    }

    .feeturesUGCImages__images img.ugc-2,  .feeturesUGCImages__images img.ugc-3 {
      width: 50%;
    }
  }
  {% endif %}

  {% if section.settings.image3 == blank and section.settings.image4 == blank %}
    .feeturesUGCImages__images img {
    width: 50%;
  }

  @media (max-width: 767px) {
    .feeturesUGCImages__images  img.ugc-1, .feeturesUGCImages__images img.ugc-2 {
      width: 50%;
    }
  }
  {% endif %}
{%- endstyle -%}

<section class="section-id-{{section.id}}-padding">
  <div class="feetures-UGCImages">
    {% if section.settings.headline != blank %}
      <h3 class="feeturesUGCImages__headline">{{ section.settings.headline }}</h3>
    {% endif %}
    <div class="feeturesUGCImages__images">
      <img
        class="lazyload ugc-1"
        data-sizes="
          (max-width: 767px) 50vw,
          25vw
        "
        data-srcset="
          {{ section.settings.image1 | img_url: '480x'  }} 480w,
          {{ section.settings.image1 | img_url: '400x' }} 400w,
          {{ section.settings.image1 | img_url: '300x' }} 300w,
          {{ section.settings.image1 | img_url: '200x' }} 200w
        "
        data-src="{{section.settings.image1 | img_url: '400x400'}}"
        alt="{{section.settings.image1.alt}}"
      >

      <img
        class="lazyload ugc-2"
        data-sizes="
          (max-width: 767px) 50vw,
          25vw
        "
        data-srcset="
          {{ section.settings.image2 | img_url: '480x'  }} 480w,
          {{ section.settings.image2 | img_url: '400x' }} 400w,
          {{ section.settings.image2 | img_url: '300x' }} 300w,
          {{ section.settings.image2 | img_url: '200x' }} 200w
        "
        data-src="{{section.settings.image2 | img_url: '400x400'}}"
        alt="{{section.settings.image2.alt}}"
      >
      {% if section.settings.image3 != blank %}
        <img
          class="lazyload ugc-3"
          data-sizes="
            (max-width: 767px) 50vw,
            25vw
          "
          data-srcset="
            {{ section.settings.image3 | img_url: '480x'  }} 480w,
            {{ section.settings.image3 | img_url: '400x' }} 400w,
            {{ section.settings.image3 | img_url: '300x' }} 300w,
            {{ section.settings.image3 | img_url: '200x' }} 200w
          "
          data-src="{{section.settings.image3 | img_url: '400x400'}}"
          alt="{{section.settings.image3.alt}}"
        >
      {% endif %}
      {% if section.settings.image4 != blank %}
        <img
          class="lazyload ugc-4"
          data-sizes="
            (max-width: 767px) 50vw,
            25vw
          "
          data-srcset="
            {{ section.settings.image4 | img_url: '480x'  }} 480w,
            {{ section.settings.image4 | img_url: '400x' }} 400w,
            {{ section.settings.image4 | img_url: '300x' }} 300w,
            {{ section.settings.image4 | img_url: '200x' }} 200w
          "
          data-src="{{section.settings.image4 | img_url: '400x400'}}"
          alt="{{section.settings.image4.alt}}"
        >
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feetures UGC Images",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image #1 (400x400)"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image #2 (400x400)"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image #3 (400x400)"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image #4 (400x400)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Feetures UGC Images",
      "category": "Feetures"
    }
  ]
}
{% endschema %}

