<article class="grid-article">
    {% unless article.image == blank %}
      <a class="grid-article__featured-image-link" href="{{ article.url }}">
        <div class="grid-article__featured-image-wrapper" >
          {% assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
          <img class="grid-article__featured-image lazyload"
            src="{{ article.image | img_url: '390x' }}"
            data-src="{{ img_url }}"
            data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
            data-aspectratio="{{ article.image.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ article.title | escape }}">
        </div>
      </a>
    {% endunless %}

    <div class="grid-article__inner">
      <h3 class="grid-article__heading">
        <a class="grid-article__heading-link" href="{{ article.url }}">{{ article.title }}</a>
      </h3>

      <!-- <time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}" class="date">{{ article.published_at | date: format: 'date' }}</time>
      <hr class="hr--small hr--left small--hide"> -->

      <p class="grid-article__text rte rte--indented-images">
        {{ article_content | strip_html | truncatewords: 40 }}
      </p>
      
      {% comment %}
      {% if article.tags.size > 0 %}
        <ul class="tags tags--article inline-list">
          {% include 'tags-article' %}
        </ul>
      {% endif %}
      {% endcomment %}
     
    </div>
    <div class="grid-article__read-more">
      <a href="{{ article.url }}" class="text-link" aria-label="{{ 'blogs.article.read_more' | t }} {{article.title}}">{{ 'blogs.article.read_more' | t }} <span class="icon icon-arrow-right" aria-hidden="true"></span></a>
    </div>

  </article>