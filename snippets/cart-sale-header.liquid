{% if settings.show_cart_sale_box %}
  <div
    class="drawer__cart-sale-bar"
  >
    {{ settings.cart_sale_header }}
    {% if settings.cart_sale_subheader %}
      <div class="sale-cart--subheader">{{ settings.cart_sale_subheader }}</div>
    {% endif %}
  </div>

  <style>
    .drawer__cart-sale-bar {
      width: 130%;
      background: {{ settings.cart_sale_header_background }};
      color: {{ settings.cart_sale_text_color }};
      margin-left: -30px;
      margin-right: -30px;
      padding: 10px 30px;
      margin-top: 0px;
      margin-bottom: 15px;
    }

    .drawer__cart-sale-bar p {
      margin-bottom: 0px;
    }

   #CartDrawer .drawer__fixed-header {
      height: 180px !important;
    }

    #CartDrawer .drawer__inner {
      top: 180px !important;
    }

    .sale-cart--subheader {
      font-size: 14px;
    }
    @media (max-width: 767px) {
      .sale-cart--subheader {
        font-size: 12px;
      }
    }
  </style>
{% endif %}
