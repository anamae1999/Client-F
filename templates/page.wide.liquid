{% render 'shogun-products', content: page %}
<!-- /templates/page.wide.liquid -->
{% if page.metafields.accentuate.hero_image != blank %}
    <div class="content-page-hero">
      <img src="{{page.metafields.accentuate.hero_image}}" alt="{{page.metafields.accentuate.hero_image_alt}}">
    </div>
{% endif %}

<div class="section-header {%if page.metafields.accentuate.hide_page_heading%} visually-hidden{%endif%}">
  <h1>{{ page.title }}</h1>
</div>

<div class="rte">
  {{ page.content }}
</div>
{{ page.metafields.shogun.optimizer }}
